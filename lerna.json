{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": [
    "packages/*"
  ],
  "version": "independent", 
  "npmClient": "pnpm",
  "conventionalCommits": true,  
  "command": {
    "publish": {
      "gitRemote": "git@github.com:Jason-chen-coder/forge-cli.git",
      "conventionalCommits": true,
      "message": "chore(release): publish %v"
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ]
}
